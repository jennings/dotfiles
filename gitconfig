[user]
	name = Stephen Jennings
	# forces setting the email address on each repository
	email = (none)
[core]
	editor = gvim -f
	excludesfile = /Users/stephen/.gitignore
	autocrlf = input
	safecrlf = true
[alias]
	lg = log --oneline --graph --decorate
	home = !open \"$(git config remote.origin.url)\"
	sub = submodule
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = !git ls-files -v | grep ^h | cut -c 3-
	ignored = ls-files -ci --exclude-standard
	st = status
[color]
	ui = true
[log]
	decorate = short
	date = iso
[credential]
	helper = osxkeychain
[push]
	default = simple
[pull]
	rebase = true
[diff]
	tool = kdiff3
[merge]
	tool = kdiff3
[mergetool]
	keepBackup = false
[difftool "sourcetree"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true
